pipeline {
    agent any

    stages {
        stage('Deploy to Kubernetes Master') {
            steps {
                sshagent(['test']) {
                    sh """
                    ssh -o StrictHostKeyChecking=no ubuntu@13.232.221.83 '
                        # Remove old project
                        rm -rf test-project

                        # Clone the repo
                        git clone https://github.com/Tatanagasai20/test-project.git

                        # Navigate to the app
                        cd test-project/node-app/node-app

                        # Build and push Docker image
                        docker build -t tnagasai/nodeapp-image:latest .
                        docker login -u tnagasai -p <DOCKER_HUB_PASSWORD>
                        docker push tnagasai/nodeapp-image:latest

                        # Deploy to Kubernetes
                        kubectl apply -f deployment.yaml --validate=false
                        kubectl apply -f service.yaml --validate=false
                    '
                    """
                }
            }
        }
    }
}
