pipeline {
    agent any

    environment {
        DOCKER_USER = 'tnagasai'
    }

    stages {
        stage('Clone Code') {
            steps {
                git 'https://github.com/Tatanagasai20/test-project.git'
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                dir('node-app/node-app') {
                    withCredentials([usernamePassword(
                        credentialsId: 'dockerhub-creds',
                        usernameVariable: 'DOCKER_USERNAME',
                        passwordVariable: 'DOCKER_PASSWORD'
                    )]) {
                        sh 'docker build -t $DOCKER_USER/nodeapp-image:latest .'
                        sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
                        sh 'docker push $DOCKER_USER/nodeapp-image:latest'
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sshagent(['test']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no ubuntu@13.232.221.83 '
                        rm -rf test-project &&
                        git clone https://github.com/Tatanagasai20/test-project.git &&
                        cd test-project/node-app/node-app &&
                        /usr/bin/kubectl apply -f deployment.yaml &&
                        /usr/bin/kubectl apply -f service.yaml
                    '
                    '''
                }
            }
        }
    }
}
