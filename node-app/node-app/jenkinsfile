pipeline {
    agent any

    environment {
        DOCKER_USER = 'tnagasai'
    }

    stages {
        stage('Build & Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds',
                                                  usernameVariable: 'DOCKER_USERNAME_VAR',
                                                  passwordVariable: 'DOCKER_PASSWORD_VAR')]) {
                    sh '''
                        rm -rf test-project
                        git clone https://github.com/Tatanagasai20/test-project.git
                        cd test-project/node-app/node-app

                        docker build -t nodeapp-image .
                        docker tag nodeapp-image $DOCKER_USERNAME_VAR/nodeapp-image:latest
                        echo $DOCKER_PASSWORD_VAR | docker login -u $DOCKER_USERNAME_VAR --password-stdin
                        docker push $DOCKER_USERNAME_VAR/nodeapp-image:latest
                    '''
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sshagent(['test']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no ubuntu@<K8S_MASTER_PUBLIC_IP> << EOF
                        kubectl delete -f test-project/node-app/node-app/deployment.yaml --ignore-not-found=true
                        kubectl delete -f test-project/node-app/node-app/service.yaml --ignore-not-found=true

                        kubectl apply -f test-project/node-app/node-app/deployment.yaml
                        kubectl apply -f test-project/node-app/node-app/service.yaml
                    EOF
                    '''
                }
            }
        }
    }
}
